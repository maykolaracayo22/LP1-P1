        });
    
        // Cargar distritos al seleccionar una provincia
        provinciaSelect.change(function () {
          var provincia = $(this).val();
          var distritosOptions = distritos[provincia].map(function (distrito) {
            return $("<option>", {value: distrito, text: distrito});
          });
          distritoSelect.html(distritosOptions);
        });
    
        // Cargar ciudades al iniciar la página
        var ciudadesOptions = Object.keys(ciudades).map(function (ciudad) {
