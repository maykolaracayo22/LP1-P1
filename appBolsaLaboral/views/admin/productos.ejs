<%- include('partials/header'); %>
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Lista de producto</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">simple table</li>
            </ol>
          </div>
        </div>
        <% if (messages.success) { %>
          <div class="alert alert-success" role="alert"><%- messages.success %></div>
          <% } %>
      
          <% if (messages.error) { %>
          <div class="alert alert-danger" role="alert"><%- messages.error %></div>
          <% } %>
      
        <div class="text-right">
          
          <a href="productos-add" class="btn btn-primary"><i class="fas fa-plus"></i> Agregar</a>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          
          <div class="col-md-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">lista de productos</h3>
              </div>
              <div class="card-body p-0">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th style="width: 10px">#</th>
                      <th>nombre</th>
                      <th>precio</th>
                      <th>stock</th>
                      <th colspan="2">opciones</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(var i = 0; i< data.length; i++) { %>
                    <tr>
                      <td><%= (i+1) %></td>
                      <td><%= data[i].nombre %></td>
                      <td><%= data[i].precio %></td>
                      <td><%= data[i].stock %></td>
                      
                      <td class="text-right">
                        <a href="productos-edit/<%=data[i].id%>" class="btn btn-secondary"><i class="fas fa-edit"></i></a>
                      
                        <a href="productos-del/<%=data[i].id%>" onclick="return alert('estas seguro de eleiar')"  class="btn btn-danger"><i class="fas fa-trash"></i></i></a>
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
   
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <!-- /.content-wrapper -->
  <%- include('partials/footer'); %>
