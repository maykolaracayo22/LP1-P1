<%- include('pantalla_empresa/header'); %>
 
<style>
    .form-container {
      max-width: 400px;
      margin: 0 auto;
      padding: 20px;
      border: 1px solid #e2e8f0;
      border-radius: 8px;
      background-color: #f2f2f2;
      text-align: center;
    }
  
    .form-title {
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 20px;
    }
  
    .form-group {
      
      align-items: center;
      margin-bottom: 20px;
    }
  
    .form-label {
      flex: 0 0 120px;
      text-align: right;
      margin-right: 10px;
      font-size: 16px;
    }
  
    .form-input {
      flex: 1;
      padding: 8px;
      font-size: 14px;
      border: 1px solid #e2e8f0;
      border-radius: 4px;
    }
  
    .form-button {
      display: inline-block;
      padding: 10px 20px;
      background-color: #4c51bf;
      color: #ffffff;
      font-size: 14px;
      font-weight: bold;
      text-decoration: none;
      border-radius: 4px;
      transition: background-color 0.3s ease;
    }
  
    .form-button:hover {
      background-color: #434190;
    }
  
    .form-icon {
      margin-right: 5px;
    }

    
  </style>
  
  <style>
    .form-container {
      
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background-image: url("https://example.com/background-image.jpg");
      background-size: cover;
      background-position: center;
    }
  
    .form-content {
      width: 100%;
      max-width: 1200px; /* Aumenta el ancho máximo para que el rectángulo sea más largo */
      background-color: #fff;
      padding: 40px;
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }
  
    .form-content h2 {
      text-align: center;
      margin-bottom: 30px;
    }
  
    .form-row {
      
      justify-content: space-between;
      gap: 20px;
    }
  
    .form-group {
      flex-basis: 45%; /* Establece el ancho de cada formulario dentro de la fila */
    }
  
    .form-label {
      display: block;
      margin-bottom: 5px;
      font-weight: bold;
    }
  
    .form-input,
    .form-select,
    .form-textarea {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 3px;
      margin-top: 5px;
      font-size: 16px;
    }
  
    .form-button {
      display: inline-block;
      padding: 10px 20px;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 3px;
      margin-top: 20px;
      cursor: pointer;
      font-size: 16px;
    }
  
    .form-icon {
      margin-right: 5px;
    }
  
    @media only screen and (max-width: 768px) {
      .form-row {
        flex-wrap: wrap;
      }
  
      .form-group {
        flex-basis: 100%; /* Establece el ancho completo en pantallas más pequeñas */
      }
    }
  </style>
  
  <div class="form-container">
    <h2>Formulario de Oferta Laboral</h2>
    <form>
      <div class="form-row">
        <div class="form-group">
          <label class="form-label" for="jobTitle"><i class="fas fa-briefcase form-icon"></i>Nombre del trabajo o cargo:</label>
          <input class="form-input" type="text" id="jobTitle" name="jobTitle" required>
        </div>
  
        <div class="form-group">
          <label class="form-label" for="companyImage"><i class="fas fa-image form-icon"></i>Enlace de la Imagen Propuesta:</label>
          <input class="form-input" type="text" id="companyImage" name="companyImage" required>
        </div>
      </div>
  
      <div class="form-group">
        <label class="form-label" for="jobDescription"><i class="fas fa-file-alt form-icon"></i>Descripción de la oferta:</label>
        <textarea class="form-textarea" id="jobDescription" name="jobDescription" rows="5" required></textarea>
      </div>
  
      <div class="form-row">
        <div class="form-group">
          <label class="form-label" for="startDate"><i class="fas fa-calendar-alt form-icon"></i>Fecha de inicio:</label>
          <input class="form-input" type="date" id="startDate" name="startDate" required>
        </div>
  
        <div class="form-group">
          <label class="form-label" for="endDate"><i class="fas fa-calendar-alt form-icon"></i>Fecha de fin:</label>
          <input class="form-input" type="date" id="endDate" name="endDate" required>
        </div>
      </div>
  
      <div class="form-row">
        <div class="form-group">
          <label class="form-label" for="salary"><i class="fas fa-money-bill-wave form-icon"></i>Salario:</label>
          <input class="form-input" type="text" id="salary" name="salary" required>
        </div>
  
        <div class="form-group">
          <label class="form-label" for="workSchedule"><i class="fas fa-clock form-icon"></i>Jornada laboral:</label>
          <select class="form-select" id="workSchedule" name="workSchedule" required>
            <option value="">Seleccionar...</option>
            <option value="Tiempo completo">Tiempo completo</option>
            <option value="Medio tiempo">Medio tiempo</option>
          </select>
        </div>
      </div>
  
      <div class="form-row">
        <div class="form-group">
          <label class="form-label" for="shift"><i class="fas fa-clock form-icon"></i>Turno:</label>
          <select class="form-select" id="shift" name="shift" required>
            <option value="">Seleccionar...</option>
            <option value="Mañana">Mañana</option>
            <option value="Tarde">Tarde</option>
            <option value="Noche">Noche</option>
          </select>
        </div>
  
        <div class="form-group">
          <label class="form-label" for="companyName"><i class="fas fa-building form-icon"></i>Nombre de la empresa:</label>
          <input class="form-input" type="text" id="companyName" name="companyName" required>
        </div>
      </div>
  
      <div class="form-row">
        <div class="form-group">
          <label class="form-label" for="jobStatus"><i class="fas fa-check-circle form-icon"></i>Estado de la oferta:</label>
          <select class="form-select" id="jobStatus" name="jobStatus" required>
            <option value="">Seleccionar...</option>
            <option value="Activa">Activa</option>
            <option value="Cerrada">Cerrada</option>
          </select>
        </div>
  
        <div class="form-group">
          <label class="form-label" for="jobEndDate"><i class="fas fa-calendar-check form-icon"></i>Fecha final de la oferta:</label>
          <input class="form-input" type="date" id="jobEndDate" name="jobEndDate" required>
        </div>
      </div>
  
      <button type="submit" class="form-button"><i class="fas fa-paper-plane form-icon"></i>Enviar</button>
    </form>
  </div>
  
  
  
  
  
  

  <!-- /.content-wrapper -->
  <%- include('pantalla_empresa/footer'); %>